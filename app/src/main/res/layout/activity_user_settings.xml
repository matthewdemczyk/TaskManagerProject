<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorControlHighlight"
    tools:context="com.example.michelledussault.taskmanager.UserSettingsActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/SelectUsertextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="25dp"
            android:text="@string/SelectUsertextView"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="152dp"
            tools:layout_editor_absoluteY="32dp" />

        <ListView
            android:id="@+id/UsersListView"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <Button
            android:id="@+id/CreateUserButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="35dp"
            android:layout_marginLeft="95dp"
            android:layout_marginRight="95dp"
            android:layout_marginTop="15dp"
            android:background="@android:color/background_light"
            android:onClick="buttonCreateUserOnClick"
            android:text="@string/CreateUserButton"
            tools:layout_editor_absoluteX="130dp"
            tools:layout_editor_absoluteY="356dp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
